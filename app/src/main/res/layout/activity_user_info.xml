<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#BA940D"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo">

    <ImageButton
        android:id="@+id/imageButtonback"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:src="@drawable/pic1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        tools:ignore="RedundantNamespace" />

    <TextView
        android:id="@+id/nametext"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:paddingStart="10dp"
        android:text="Name:"
        android:textSize="30sp"
        tools:ignore="HardcodedText,RtlSymmetry,TextSizeCheck" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:text="Phone#:"
        android:textSize="30sp"
        tools:ignore="HardcodedText,RtlSymmetry,TextSizeCheck" />

    <ImageButton
        android:id="@+id/callbutton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/radiusset"
        android:backgroundTint="#09D510"
        android:src="@drawable/baseline_call_24"
        tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck,TextContrastCheck" />



</LinearLayout>